{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "sing-box Reality Configuration Schema",
  "description": "JSON Schema for validating sing-box VLESS + REALITY + Vision configurations",
  "type": "object",
  "required": ["inbounds"],
  "properties": {
    "log": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["trace", "debug", "info", "warn", "error", "fatal", "panic"]
        },
        "timestamp": {
          "type": "boolean"
        }
      }
    },
    "dns": {
      "type": "object",
      "properties": {
        "servers": {
          "type": "array",
          "minItems": 1
        },
        "strategy": {
          "type": "string",
          "enum": ["prefer_ipv4", "prefer_ipv6", "ipv4_only", "ipv6_only"]
        }
      }
    },
    "inbounds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["vless", "vmess", "trojan", "hysteria2", "shadowsocks", "mixed", "http", "socks"]
          },
          "tag": {
            "type": "string",
            "minLength": 1
          },
          "listen": {
            "type": "string"
          },
          "listen_port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
          },
          "users": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["uuid"],
              "properties": {
                "uuid": {
                  "type": "string",
                  "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
                  "description": "UUID v4 format"
                },
                "flow": {
                  "type": "string",
                  "enum": ["", "xtls-rprx-vision"],
                  "description": "Flow control: empty for TLS, xtls-rprx-vision for Reality"
                }
              }
            }
          },
          "tls": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "server_name": {
                "type": "string",
                "format": "hostname",
                "description": "SNI (Server Name Indication)"
              },
              "reality": {
                "type": "object",
                "required": ["enabled", "private_key", "short_id", "handshake"],
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "const": true,
                    "description": "Reality must be enabled"
                  },
                  "private_key": {
                    "type": "string",
                    "minLength": 32,
                    "pattern": "^[A-Za-z0-9+/=_-]+$",
                    "description": "X25519 private key (base64-like)"
                  },
                  "short_id": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "type": "string",
                      "pattern": "^[0-9a-fA-F]{1,8}$",
                      "description": "1-8 hexadecimal characters (sing-box limit, NOT Xray's 16-char)"
                    },
                    "description": "Array of short IDs for Reality protocol"
                  },
                  "handshake": {
                    "type": "object",
                    "required": ["server", "server_port"],
                    "properties": {
                      "server": {
                        "type": "string",
                        "format": "hostname",
                        "description": "Handshake destination server (e.g., www.microsoft.com)"
                      },
                      "server_port": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 65535,
                        "description": "Handshake destination port (typically 443)"
                      }
                    }
                  },
                  "max_time_difference": {
                    "type": "string",
                    "pattern": "^[0-9]+[smh]$",
                    "description": "Anti-replay protection time window (e.g., 1m, 5s)"
                  }
                },
                "description": "Reality TLS configuration (sing-box 1.12.0+)"
              },
              "alpn": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["h2", "http/1.1", "h3"]
                },
                "description": "ALPN protocols"
              }
            }
          },
          "transport": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["tcp", "ws", "grpc", "http", "quic"]
              }
            }
          }
        }
      }
    },
    "outbounds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "tag"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["direct", "block", "dns", "vless", "vmess", "trojan", "hysteria2", "shadowsocks", "socks", "http"]
          },
          "tag": {
            "type": "string",
            "minLength": 1
          },
          "tcp_fast_open": {
            "type": "boolean",
            "description": "Enable TCP Fast Open for performance"
          }
        }
      }
    },
    "route": {
      "type": "object",
      "properties": {
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "inbound": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "action": {
                "type": "string",
                "enum": ["sniff", "hijack-dns", "route", "route-options", "reject"]
              },
              "outbound": {
                "type": "string"
              }
            }
          }
        },
        "auto_detect_interface": {
          "type": "boolean",
          "description": "Prevent routing loops"
        },
        "default_domain_resolver": {
          "type": "object",
          "properties": {
            "server": {
              "type": "string"
            }
          },
          "description": "sing-box 1.14.0+ compatibility"
        }
      }
    }
  }
}
